<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    style="@style/MyCardViewStyle.Background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_track"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title_artist_track"
                style="@style/BaseText.ScrollingText"
                android:padding="@dimen/margin_padding_size_small"
                app:layout_constraintRight_toLeftOf="@id/tv_album"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_album"
                style="@style/BaseText.ScrollingText"
                android:padding="@dimen/margin_padding_size_small"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintLeft_toRightOf="@id/tv_title_artist_track"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
