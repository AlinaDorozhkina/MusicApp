<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="BaseText.main_text">
        <item name="android:textSize">@dimen/main_text</item>

    </style>

    <style name="BaseText.header_text">
        <item name="android:textSize">@dimen/header_text</item>

    </style>

    <style name="BaseText.title_text">
        <item name="android:textSize">@dimen/title_text</item>
    </style>

    <style name="viewBackgroundStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="MyIconButtonStyle" parent = "Widget.AppCompat.Button.Borderless">
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>

</resources>