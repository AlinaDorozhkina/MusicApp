<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BaseText.main_text">
        <item name="android:textSize">@dimen/main_text</item>

    </style>

    <style name="BaseText.header_text">
        <item name="android:textSize">@dimen/header_text</item>

    </style>

    <style name="BaseText.title_text">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.title_text_white">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ScrollingText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:freezesText">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="viewBackgroundStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="MyIconButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>

    <style name="ConstraintCenterHorizontalStyle">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <!-- Style to align the View component under ConstraintLayout to the Top in center_horizontal format -->
    <style name="ConstraintTopCenterHorizontalStyle" parent="ConstraintCenterHorizontalStyle">
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="PlayerFullExtraControlsStateImageButtonsStyle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd" >10dp</item>
        <item name="android:background">@drawable/player_buttons_background</item>
    </style>

    <style name="PlayerFullExtraControlsImageButtonsStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

</resources>